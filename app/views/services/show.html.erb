<div class="mx-auto md:w-2/3 w-full flex mt-11">
  <div class="mx-auto">
    <% if notice.present? %>
      <p
        class="
          py-2
          px-3
          bg-green-50
          mb-5
          text-green-500
          font-medium
          rounded-lg
          inline-block
        "
        id="notice"
      ><%= notice %></p>
    <% end %>

    <div class="overflow-x-auto relative">
      <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
        <thead
          class="
            text-xs
            text-gray-700
            uppercase
            bg-gray-100
            dark:bg-gray-700
            dark:text-gray-400
          "
        >
          <tr>
            <th scope="col" class="py-3 px-6 rounded-l-lg">
              Name
            </th>
            <th scope="col" class="py-3 px-6">
              Endpoint
            </th>
            <th scope="col" class="py-3 px-6 rounded-r-lg">
              Status
            </th>
            <th scope="col" class="py-3 px-6 rounded-r-lg">
              Interval
            </th>
          </tr>
        </thead>
        <%= render @service %>
      </table>
    </div>

    <% @service.status_history %>
    <% pie_chart @piechartdata %>
    <%= pie_chart @status_history_tally %>

    <%= link_to 'Edit', edit_service_path(@service), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Delete', service_path(@service), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Services', services_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
