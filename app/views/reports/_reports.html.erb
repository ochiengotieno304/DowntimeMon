<div class="my-5">
  <div class="flex justify-between items-center my-5">
    <h1 class="font-bold text-xl">Maintenance Summary Reports</h1>
    <%= link_to "Add maintenance summary","#", class: "rounded-lg py-3 px-5 bg-blue-900 text-white block font-medium" %>
  </div>

  <div class="overflow-x-auto relative shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left text-gray-500">
      <thead class=" text-xs text-gray-700 uppercase bg-gray-50">
        <tr>
          <th scope="col" class="py-3 px-6">
            Maintained by
          </th>
          <th scope="col" class="py-3 px-6">
            Maintenance Duration
          </th>
          <th scope="col" class="py-3 px-6">
            Downtime Reason
          </th>
          <th scope="col" class="py-3 px-6">
            Maintained On
          </th>
          <th scope="col" class="py-3 px-6">
            Action
          </th>
        </tr>
      </thead>
      <%= render @service.reports %>
    </table>
  </div>

</div>
